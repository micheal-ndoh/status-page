{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build",
        "includeFiles": ["dist/**", "config/**", "package.json"]
      }
    },
    {
      "src": "api/health.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    },
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "HOST": "0.0.0.0",
    "PORT": "1337"
  }
}
