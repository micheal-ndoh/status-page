{
  "version": 2,
  "builds": [
    {
      "src": "api/strapi.js",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build",
        "includeFiles": ["dist/**", "config/**", "package.json"],
        "maxLambdaSize": "250mb"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/strapi"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "HOST": "0.0.0.0",
    "PORT": "1337"
  }
}
