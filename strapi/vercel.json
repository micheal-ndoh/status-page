{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "dist/**",
            "package.json",
            "package-lock.json",
            "yarn.lock"
          ]
        }
      }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/server.js"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "outputDirectory": "dist"
  }